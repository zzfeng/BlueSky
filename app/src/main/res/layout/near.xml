<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_dis"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="周边范围：5 公里"
        android:textColor="@color/font_color_foucus"
        android:textSize="16sp"
        android:textStyle="normal" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/line_height"
        android:background="@color/bg_all_style" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="20"
        android:paddingBottom="2dp"
        android:paddingTop="6dp"
        android:progress="5"
        android:progressDrawable="@drawable/bg_bar"
        android:thumb="@drawable/thumb_bar" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/line_height"
        android:background="@color/bg_all_style" />

    <TextView
        android:id="@+id/pmSearch"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="PM10周边查询"
        android:textColor="@color/font_color_foucus"
        android:textSize="16sp"
        android:textStyle="normal" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/line_height"
        android:background="@color/bg_all_style" />

    <TextView
        android:id="@+id/bulidSearch"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="工地周边查询"
        android:textColor="@color/font_color_foucus"
        android:textSize="16sp"
        android:textStyle="normal" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/line_height"
        android:background="@color/bg_all_style" />

    <TextView
        android:id="@+id/id_tv_cancle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="#FFF9445A"
        android:textSize="16sp"
        android:textStyle="normal" />

</LinearLayout>